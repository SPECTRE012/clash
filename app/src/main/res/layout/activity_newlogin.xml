<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1234"
    tools:context=".newlogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal|center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Register"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gmailogin"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/username001"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Username"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/usernameicon"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:textSize="18dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:background="@drawable/gmailogin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email002"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/usernameicon"
            android:hint="Email"
            android:inputType="textPersonName"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/gmailogin"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password003"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="password"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/passwordicon"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:background="@null"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/gmailogin"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirmpassword004"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="conform password"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/passwordicon"
                android:paddingLeft="20dp"
                android:drawablePadding="10dp"
                android:textSize="18dp"
                android:background="@null"
               />
        </LinearLayout>



        <Button
            android:id="@+id/registerbutton005"
            android:layout_width="318dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/gmailogin"
            android:backgroundTint="@color/white"
            android:layout_height="50dp"
            android:text="Register"/>

        <TextView
            android:id="@+id/alreadyac006"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="Already Have an Account" />

    </LinearLayout>




</ScrollView>
